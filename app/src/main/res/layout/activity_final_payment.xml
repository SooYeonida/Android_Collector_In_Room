<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.mypage.FinalPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/pay_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="프로젝트 이름"
            android:textColor="#8028ADFC"
            android:textSize="30sp"
            android:fontFamily="@font/tmonmonsori" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="의 가격은"
            android:textSize="30sp"
            android:fontFamily="@font/tmonmonsori" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/pay_project_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="프로젝트 가격"
            android:textColor="#8028ADFC"
            android:textSize="30sp"
            android:fontFamily="@font/tmonmonsori" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="입니다."
            android:textSize="30sp"
            android:fontFamily="@font/tmonmonsori" />
    </LinearLayout>

    <Button
        android:id="@+id/pay_point_btn"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:background="@drawable/pay_point"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/pay_account_btn"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:background="@drawable/pay_account"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
</LinearLayout>
