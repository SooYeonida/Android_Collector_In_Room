<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/final_payment_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="프로젝트 이름"
            android:textColor="#8028ADFC"
            android:textSize="30sp"
            android:fontFamily="@font/tmonmonsori" />

        <TextView
            android:id="@+id/final_payment_if_terminate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tmonmonsori"
            android:gravity="center"
            android:text="를 종료하려면"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/final_payment_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="프로젝트 가격"
            android:textColor="#8028ADFC"
            android:textSize="30sp"
            android:fontFamily="@font/tmonmonsori" />

        <TextView
            android:id="@+id/final_payment_pay_or_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/tmonmonsori"
            android:gravity="center"
            android:text="을 추가로 지불해야 합니다."
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:id="@+id/final_payment_by_point"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:background="@drawable/pay_point"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/final_payment_by_account"
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:background="@drawable/pay_account"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/final_payment_free_terminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="프로젝트 종료"
        android:visibility="gone" />

</LinearLayout>
