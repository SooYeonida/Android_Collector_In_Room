<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/project_icon_workhistory"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/project_name_workhistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="project_name"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="의뢰자:"
                android:textSize="15sp" />
        <TextView
            android:id="@+id/project_requester_workhistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="project_requester"
            android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="작업 타입:"
                android:textSize="15sp" />
        <TextView
            android:id="@+id/work_type_workhistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="project_work_type"
            android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="데이터 타입:"
                android:textSize="15sp" />
        <TextView
            android:id="@+id/data_type_workhistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="project_data_type"
            android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="진행 상태:"
                android:textSize="15sp"
                android:textColor="#E91E63"/>
        <TextView
            android:id="@+id/status_workhistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="project_status"
            android:textSize="15sp"
            android:textColor="#E91E63"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
