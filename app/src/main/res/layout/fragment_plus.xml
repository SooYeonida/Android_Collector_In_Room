<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor"
    tools:context=".ui.plus.PlusFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로젝트 생성"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#8028ADFC"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="프로젝트명:"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:hint="project name"/>
                </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로젝트 타입"
            android:layout_marginTop="20dp"/>

          <RadioGroup
              android:id="@+id/radioGroup_project"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

              <RadioButton
                  android:id="@+id/data_collection_btn"
                  android:layout_width="65dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="데이터 수집" />

              <RadioButton
                  android:id="@+id/labelling_btn"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:text="라벨링" />
          </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="데이터 타입"
            android:layout_marginTop="20dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/image_btn"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이미지" />

                <RadioButton
                    android:id="@+id/text_btn"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="텍스트" />

                <RadioButton
                    android:id="@+id/voice_btn"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="음성" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="주제:"
                    android:layout_marginTop="20dp"/>
                <EditText
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:hint="subject"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="설명:"
                    android:layout_marginTop="20dp"/>
                <EditText
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:hint="description"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="방법:"
                    android:layout_marginTop="20dp"/>
                <EditText
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:hint="way"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="조건:"
                    android:layout_marginTop="20dp"/>
                <EditText
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:hint="condition"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="예시:"
                   android:layout_marginTop="20dp"/>
                <EditText
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:hint="example"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="*예시 데이터 업로드*"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/example_data_selection"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="이미지 선택"
                android:backgroundTint="#8028ADFC"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="*라벨링 데이터 업로드*"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/labelling_data_selection"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="이미지 선택"
            android:backgroundTint="#8028ADFC"/>
        </LinearLayout>

        <Button
            android:id="@+id/make_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Make"
            android:backgroundTint="#8028ADFC"/>
    </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
