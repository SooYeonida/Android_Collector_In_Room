<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_plus"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="프로젝트 생성"
            android:textColor="#8028ADFC"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="프로젝트명:" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="project name"
                android:inputType="textMultiLine"
                android:maxLines="1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="프로젝트 타입" />

        <RadioGroup
            android:id="@+id/radioGroup_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/data_collection_btn"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="데이터 수집" />

            <RadioButton
                android:id="@+id/labelling_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="라벨링" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="데이터 타입" />

        <RadioGroup
            android:id="@+id/radioGroup_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/image_btn"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이미지" />

            <RadioButton
                android:id="@+id/text_btn"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="텍스트" />

            <RadioButton
                android:id="@+id/voice_btn"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="음성" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="주제:" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="subject"
                android:inputType="textMultiLine"
                android:maxLines="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="설명:" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="description"
                android:inputType="textMultiLine"
                android:maxLines="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="방법:" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="way"
                android:inputType="textMultiLine"
                android:maxLines="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="조건:" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="condition"
                android:inputType="textMultiLine"
                android:maxLines="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="예시:" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="example"
                android:inputType="textMultiLine"
                android:maxLines="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="*예시 데이터 업로드*" />

            <Button
                android:id="@+id/example_data_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#8028ADFC"
                android:text="이미지 선택" />
        </LinearLayout>

        <TextView
            android:id="@+id/examplePicturesURI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="*라벨링 데이터 업로드*" />

            <Button
                android:id="@+id/labelling_data_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#8028ADFC"
                android:text="이미지 선택" />
        </LinearLayout>

        <Button
            android:id="@+id/make_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#8028ADFC"
            android:text="Make" />
    </LinearLayout>
</ScrollView>
