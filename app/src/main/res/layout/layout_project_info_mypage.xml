<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/project_info_mypage">

    <ImageView
        android:id="@+id/project_icon_mypage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/project_name_mypage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="project_name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/project_type_mypage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="project_type"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/data_type_mypage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="project_data_type"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>