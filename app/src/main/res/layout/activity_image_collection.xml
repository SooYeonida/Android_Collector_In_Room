<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ImageCollectionActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:scaleType="fitStart"
        android:src="@drawable/home_logo" />

        <TextView
            android:id="@+id/image_collection_project_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="프로젝트 이름"
            android:textSize="20sp"
            android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80CCCECF"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="프로젝트 진행 방법 "
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/image_collection_way_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="waycontent"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80CCCECF"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="프로젝트 조건"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/image_collection_condition_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="conditioncontent"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80CCCECF"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="프로젝트 예시"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:background="#80242525"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_image_black_24dp"
        android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="이미지 데이터 추가"
            android:gravity="center"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_add_box_black_24dp"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>