<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ImageCollectionActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:scaleType="fitStart"
        android:src="@drawable/home_logo" />

        <TextView
            android:id="@+id/image_collection_project_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="프로젝트 이름"
            android:textSize="20sp"
            android:fontFamily="@font/tmonmonsori"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80CCCECF"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="프로젝트 진행 방법 "
        android:textSize="20sp"
        android:fontFamily="@font/tmonmonsori" />
    <TextView
        android:id="@+id/image_collection_way_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="waycontent"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80CCCECF"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="프로젝트 조건"
        android:textSize="20sp"
        android:fontFamily="@font/tmonmonsori"/>

    <TextView
        android:id="@+id/image_collection_condition_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="conditioncontent"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80CCCECF"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="프로젝트 예시"
        android:textSize="20sp"
        android:fontFamily="@font/tmonmonsori"/>

    <ImageView
        android:id="@+id/work_example_content_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:background="#80242525"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup_class_list_image"
            android:orientation="horizontal"
            android:layout_gravity="center">

        </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*이미지 등록버튼을 눌러야 작업이 완료됩니다. 버튼을 꼭 눌러주세요*"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_image_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="이미지 데이터 추가"
            android:fontFamily="@font/tmonmonsori"/>

        <Button
            android:id="@+id/collection_image_select"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_add_box_black_24dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/collection_image_uri"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=""
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/collection_image_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#8028ADFC"
        android:text="이미지 등록"
        android:fontFamily="@font/tmonmonsori"/>

    <Button
        android:id="@+id/work_done_image"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#8028ADFC"
        android:text="작업 완료"
        android:fontFamily="@font/tmonmonsori"/>

</LinearLayout>
</ScrollView>